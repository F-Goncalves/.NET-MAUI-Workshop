<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:disneyapi="clr-namespace:MauiWorkshop.DisneyApi;assembly=MauiWorkshop.DisneyApi"
             x:Class="MauiWorkshop.AboutPage">

    <Grid RowDefinitions="Auto,*">

        <Image Source="logo.png"
               Aspect="AspectFit"
               Margin="32"/>

        <Label Grid.Row="1"
               FontSize="20"
               Margin="16">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text=".NET MAUI show case app built with help of " />
                    <Span Text="Disneyapi.dev"
                          FontFamily="NewWaltDisneyFontRegular" />
                </FormattedString>
            </Label.FormattedText>

        </Label>

    </Grid>

</ContentPage>

